NAME = school
SRC = main.c school.c
OBJ = main.o school.o
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f *~

oclean:
	rm -f $(OBJ)

fclean: clean oclean
	rm -f $(NAME)

re: fclean all
