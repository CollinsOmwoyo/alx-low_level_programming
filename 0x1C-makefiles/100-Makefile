NAME = school
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
    $(CC) -c $< -o $@

clean:
    $(RM) $(NAME)
    $(RM) *~

oclean:
    $(RM) $(OBJ)

fclean: clean oclean

re: fclean all
